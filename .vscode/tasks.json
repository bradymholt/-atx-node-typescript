{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "tsc",
      "type": "shell",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "command": "./node_modules/typescript/bin/tsc --outDir ./out ${relativeFile} && node ./out/${relativeFileDirname}/${fileBasenameNoExtension}.js",
      "problemMatcher": []
    },
    {
      "label": "ts-node",
      "type": "shell",     
      "command": "ts-node ${relativeFile}",
      "problemMatcher": []
    }
  ]
}
